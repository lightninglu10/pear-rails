<!DOCTYPE html>
<html>
<head>
  <title>Pear - OTP service</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <%= render 'layouts/navigation' %>
  </header>

  <div class="container" style="margin-top: 60px;">
    <div class="col-sm-9">
      <%= yield %>
    </div>
    <div class="col-sm-3 sidebar-column">
      <% if user_signed_in? %>
        <%= render 'layouts/profile' %>
      <% else %>
        <%= button_to "Login", new_user_session_path, :class => "button", :method => :get  %><br>
        <%= button_to "Create account", new_user_registration_path, :class => "button", :method => :get  %>
      <% end %>
    </div>
  </div>

</body>
</html>
