<div class="ui segment">
    <h3>Mailbox</h3>
    
    <div class="ui list">
        <div class="item">
            <% if @conversations.blank? or @conversations.empty? %>
                <p> No conversations started yet. Make a move Scherbatsky.</p>
            <% else %>
                <% @conversations.each do |conversation| %>
                    <% if conversation.sender_id == current_user.id %>
                        <% recipient = User.find(conversation.recipient_id) %>
                    <% else %>
                        <% recipient = User.find(conversation.sender_id) %>
                    <% end %>
                    <%= link_to recipient.name, conversation_messages_path(conversation_id: conversation.id)%>
                    <br>
                <% end %>
            <% end %>
        </div>
    </div>
</div><hr>

<div class="ui segment">
    <h3>All Users</h3>
    <div class="ui list">
        <% @users.each do |user| %>
            <% if user.id != current_user.id && user.deleted? != true %>
                <div class="item">
                    <%= user.name %>,
                    <%= link_to 'Send message!', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
                </div>
            <% end %>
        <% end %>
    </div>
</div>
