<h3>Received Requests</h3><hr>
<div class=”ui segment”>
    <% @incoming.each do |request| %>
      <div class="row">
        <div class="col-sm-2">
          <%= gravatar_for request.user, size: 80 %>
        </div>
        <div class="col-sm-10">
          <p style="display: inline-block;"><%= request.user.name %></p>

          <%= button_to "Accept", request_path(request.id), :class => "button blocky small like", method: :patch  %>
        </div>
      </div><hr>
    <% end %>
</div>

<br><h3>Sent Requests</h3><hr>
<div class=”ui segment”>
    <% @outgoing.each do |request| %>
        <p><%= request.user.name %></p>
    <% end %>
</div>
